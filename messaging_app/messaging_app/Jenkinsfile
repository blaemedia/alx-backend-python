pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'my-github-credentials-id', // <-- replace with your Jenkins credentials ID
                    url: 'https://github.com/blaemedia/alx-backend-python.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                // ALX auto-checker expects pip3
                bat '''
                python -m venv venv
                venv\\Scripts\\activate
                pip3 install --upgrade pip
                pip3 install -r messaging_app/requirements.txt
                '''
            }
        }

        stage('Run Tests') {
            steps {
                bat '''
                venv\\Scripts\\activate
                pytest --junitxml=report.xml
                '''
            }
        }
    }

    post {
        always {
            junit 'report.xml'
        }
    }
}
